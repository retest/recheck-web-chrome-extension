{
	"name": "recheck-web Demo",
	"version": "0.5.1",
	"manifest_version": 2,
	"description": "One-click difference checking of websites.",
	"permissions": [
		"activeTab",
		"https://*.retest.org/"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"tooltip": "Click to create a Golden Master or a difference report of this website."
	},
	"background": {
		"scripts": [
			"full-page-screen-capture-api.js",
			"background.js"
		],
		"persistent": true
	},
	"web_accessible_resources": [
		"login.html",
		"login.js",
		"keycloak.min.js"
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
