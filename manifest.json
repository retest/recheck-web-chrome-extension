{
	"manifest_version": 2,
	"name": "recheck-web",
	"description": "Click to recheck this website",
	"version": "0.3",
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*",
				"file://*"
			],
			"js": [
				"getAllElementsByPath.js",
				"content.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"web_accessible_resources": [
		"login.html",
		"login.js",
		"keycloak.min.js"
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
